extends layout
block content
    form.register-form(action='/register', method='post')
        img.logo(src='/logo.png')
        .form-group
            input.form-control(type='text', name='name', placeholder='이름')
        .form-group
            input.form-control(type='text', name='nickname', placeholder='닉네임')
        .form-group
            input.form-control(type='password', name='pwd', placeholder='비밀번호')
        .form-group
            input.form-control(type='password', name='pwdchk', placeholder='비밀번호확인')
        if errmsg
            span.alert=errmsg
        a.link(href="/") 로그인
        button.register-btn(type='submit') 회원가입
block script
    script.
      $(function () {
        var err = "!{err}";
        if (err) {alert("!{errmsg}");}
      });


